% (order length) -- ()
/drawthird { %def
	/armlen exch def
	/armorder exch def

	armorder 0 eq { %ifelse: true
		armlen 0 rlineto
	}
	{ %ifelse: false
		/sublen armlen 3 div def
		/neworder armorder 1 sub def

		neworder sublen drawthird
		60 rotate
		neworder sublen drawthird
		240 rotate
		neworder sublen drawthird
		60 rotate
		neworder sublen drawthird
	} ifelse

} def

/drawtriangle {
	/len exch def
	1 sub
	/order exch def

	60 rotate
	order len drawthird
	240 rotate
	order len drawthird
	240 rotate
	order len drawthird
} def

200 300 translate
0 0 moveto
2 100 drawtriangle
stroke
