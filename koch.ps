% (order length) -- ()
/drawthird { %def
	/length exch def
	/order exch def

	order 0 eq { %ifelse: true
		length 0 rlineto
	}
	{ %ifelse: false
		/sublength length 3 div def
		/neworder order 1 sub def

		neworder sublength drawthird
		60 rotate
		neworder sublength drawthird
		240 rotate
		neworder sublength drawthird
		60 rotate
		neworder sublength drawthird
	} ifelse

} def

/drawtriangle {
	/length exch def
	1 sub
	/order exch def

	60 rotate
	order length drawthird
	%240 rotate
	%order length drawthird
	%240 rotate
	%order length drawthird
} def

200 300 translate
0 0 moveto
2 100 drawtriangle
stroke
