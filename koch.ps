% (order length) -- (order length)
/drawthird { %def
	/lenght exch def
	/order exch def

	order 0 eq { %ifelse: true
		length 0 rlineto
		order length
	}
	{ %ifelse: false
		/sublength length 3 div def
		/neworder order 1 sub def

		neworder sublength
		pstack
		drawthird
		60 rotate
		drawthird
	} ifelse

} def

/drawtriangle {
	/length exch def
	1 sub
	/order exch def

	order length
	60 rotate
	drawthird
	240 rotate
	drawthird
	240 rotate
	drawthird

	pop pop
} def

200 300 translate
0 0 moveto
2 300 drawtriangle
stroke
