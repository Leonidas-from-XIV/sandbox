% (order length) -- (order length)
/drawthird {
	/lenght exch def
	/order exch def

	length 0 rlineto
	order length
} def

/drawtriangle {
	/length exch def
	1 sub
	/order exch def

	order length
	60 rotate
	drawthird
	240 rotate
	drawthird
	240 rotate
	drawthird
} def

200 300 translate
0 0 moveto
1 300 drawtriangle
stroke
