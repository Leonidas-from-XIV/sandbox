% blue
/Fgcolor { [ 0 75 115 ] { 255 div } forall } def
% white
/Bgcolor { 1 1 1 } def

/outsidecircletext
  {
	  circtextdict begin
		  /radius exch def
		  /centerangle exch def
		  /ptsize exch def
		  /str exch def
		  /xradius radius ptsize 4 div add def

		  gsave
			  centerangle str findhalfangle add rotate

			  str
			  {
				  /charcode exch def
				  ( ) dup 0 charcode put outsideplacechar
			  } forall
		  grestore
	  end
  } def

/circtextdict 16 dict def
circtextdict begin
	/findhalfangle
	{
		stringwidth pop 2 div
		2 xradius mul pi mul div 360 mul
	} def

	/outsideplacechar
	{
		/char exch def
		/halfangle char findhalfangle def
		gsave
			halfangle neg rotate
			radius 0 translate
			-90 rotate
			char stringwidth pop 2 div neg 0 moveto
			char show
		grestore
		halfangle 2 mul neg rotate
	} def

	/pi 3.1415923 def
end

/showtext
{
	/fontsize 28 def
	/Helvetica-Bold findfont fontsize scalefont setfont
	Fgcolor setrgbcolor

	(I thought what I'd do was, I'd pretend I was one of those deaf-mutes)
	28 315 140 outsidecircletext
} def

% (radius line-width -- )
/filledcircle
{
	/width exch def
	/radius exch def

	Fgcolor setrgbcolor
	newpath
	0 0 radius 0 360 arc
        0 0 radius width sub 0 360 arc
	eofill
} def

/innercircle
{
	/radius 120 def
	20 setlinewidth
	0 0 radius 10 170 arc
	310 0 rlineto
	200 -5 26 90 270 arcn
	-93 0 rlineto
	0 0 radius 345 180 arcn
	stroke
} def

/smile
{
	/radius 80 def
	/offset 22 def
	0 0 radius 180 offset add 360 offset sub arc
	closepath
	stroke
} def

270 400 translate
0 0 moveto
showtext
180 11 filledcircle
innercircle
smile
