% ( radius hole-center hole-degrees -- )
/nonCompleteCircle
 { %def
	% divide hole-degrees by two
	2 div
	% x, y coordinates
 	0 0
	% radius
 	4 index
	% get the starting angle
	4 index
        dup
	5 index add
	exch
	% stop angle
        360 add 5 index sub 
        arc stroke
	% remove 3 dangling elements
	3 npop
} def

% removes a number of items from the stack
% ( n -- )
/npop
 {
	{ pop } repeat
 } def

% transform the coordinates
300 500 translate
% draw the circle
54 90 15 nonCompleteCircle
% move down a bit
0 -45 moveto
% draw the line straight up
0 60 lineto
% draw the path
stroke
%showpage
