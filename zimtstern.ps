%!PS-2.0

/Topcolor { [ 238 46 36 ] { 255 div } forall } def
/Bottomcolor { [ 0 0 0 ] { 255 div } forall } def

% (x y) -- (x y)
% returns the un-translation of the given coordinates, useful for reversing
% translate operations
/antitranslation {
	neg exch
	neg exch
} def

200 400 translate
0.25 0.25 scale

1 setlinejoin
20 setlinewidth

gsave
	Bottomcolor setrgbcolor
0 0 moveto

1000 0 lineto
116 rotate
286 0 rlineto
90 rotate
222 0 rlineto

% circle here
-90 rotate
currentpoint
currentpoint translate

33 100 66 0 33 arcto
4 { pop } repeat

antitranslation translate

-90 rotate
% end circle

222 0 rlineto
90 rotate
200 0 rlineto

90 rotate
711 0 rlineto

closepath

gsave
	stroke
grestore
fill
grestore

% that was the bottom part, now for the top
% reset to origin
gsave
	Topcolor setrgbcolor
0 0 moveto
64 rotate
344 0 rmoveto


255 0 rlineto

currentpoint
currentpoint translate

88 244 lineto
222 0 lineto
antitranslation translate

266 0 rlineto

-126 rotate
444 0 rlineto

closepath

gsave
	stroke
grestore
fill

grestore
