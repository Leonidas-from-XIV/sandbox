%!PS-Adobe-3.0

/Black { 0 0 0 } def
/Yellow { 1 1 0 } def
/Radius 200 def
/Linewidth 30 def
/Roundjoins 1 def

Linewidth setlinewidth
Roundjoins setlinejoin

% (radius angle) -- (x y)
/anglecoords
 { %def
	% put args in an array
	2 array astore
	% duplicate array
	dup
	% unpack the topmost one
	aload pop
	% calculate x
	cos mul
	% the other array
	exch
	% unpack
	aload pop
	% calculate y
	sin mul
	% done
 } def

/drawbg
  { % def
	Yellow setrgbcolor

	Radius 90 anglecoords moveto
	Radius 210 anglecoords lineto
	Radius 330 anglecoords lineto
	closepath
	gsave
		fill
	grestore
	stroke
  } def

/drawfg
  { % def
	/Subradius Radius 20 sub def
	Black setrgbcolor

	Subradius 90 anglecoords moveto
	Subradius 210 anglecoords lineto
	Subradius 330 anglecoords lineto
	closepath
	stroke
  } def

/drawtext
  { % def
	/Helvetica-Bold findfont 19 scalefont setfont
	-105 -64 moveto
	(RECURSION WARNING) show
  } def

/innersign
  { % def
	drawfg
	drawtext
  } def

/fullsign
  { % def
	drawbg
	innersign
  } def

% number --
/subsign
  { % def
	dup
	0 eq
	{ %iftrue
		% recursion end: delete the zero
		pop
	}
	{ %iffalse
		% change graphics context
		0 13 translate
		0.55 0.55 scale
		% draw the nex triangle
		innersign

		% decrease the recursion counter
		1 sub
		% recursievely call
		subsign
	}
	ifelse
  } def

% number --
/sign
  { % def
	fullsign
	1 sub
	subsign
  } def

300 500 translate
5 sign
